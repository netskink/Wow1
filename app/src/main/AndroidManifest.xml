<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="net.skink.wow1" >

    <uses-sdk android:maxSdkVersion="21"
              android:targetSdkVersion="21"
              android:minSdkVersion="21" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="net.skink.wow1.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="net.skink.wow1.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="net.skink.wow1.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.skink.wow1.MainActivity" />
        </activity>

    </application>

</manifest>
